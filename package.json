{
  "name": "is-modular",
  "version": "1.2.2",
  "description": "A (really) simple command line tool which checks if your code is modular.",
  "main": "lib",
  "bin": {
    "is-modular": "lib/index"
  },
  "scripts": {
    "test": "mocha **/*.test.js",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha --report lcovonly -- -R spec lib/**/*.js",
    "test-travis": "./node_modules/istanbul/lib/cli.js cover ./node_modules/mocha/bin/_mocha -- -R spec ./lib/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MD4/is-modular.git"
  },
  "bugs": {
    "url": "https://github.com/MD4/is-modular/issues"
  },
  "homepage": "https://github.com/MD4/is-modular#readme",
  "author": "Martin DEQUATREMARE (https://github.com/MD4)",
  "license": "MIT",
  "keywords": [
    "check",
    "modular",
    "code",
    "inspect"
  ],
  "engines": {
    "node": ">=0.10"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.11.9",
    "istanbul": "^0.4.4",
    "mocha": "^2.5.3",
    "mocha-lcov-reporter": "^1.2.0"
  },
  "dependencies": {
    "async": "^2.0.0-rc.6",
    "colour": "^0.7.1",
    "glob": "^7.0.5"
  }
}
